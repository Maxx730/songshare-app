<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:elevation="3dp"
    android:orientation="vertical"
    android:outlineProvider="background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/SingleAlbumArt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_dark"
                android:scaleType="fitStart"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_launcher_background" />

            <ProgressBar
                android:id="@+id/ShareLoadingAnim"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="100dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ShareIndicator"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/colorAccent">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/slightGray"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SingleTrackTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="[Track Title]"
                        android:textAlignment="textEnd"
                        android:textColor="#77000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/SingleTrackArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="[Artist]"
                    android:textAlignment="textEnd"
                    android:textColor="#77000000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/SingleShareSharer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:text="[Sharer]"
                    android:textAlignment="textEnd"
                    android:textColor="#77000000"
                    android:textSize="8sp"
                    android:textStyle="italic"
                    android:visibility="visible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/TrackLikeHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/heart_empty" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>