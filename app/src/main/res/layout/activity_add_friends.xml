<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.squidswap.songshare.songshare.AddFriends">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <Spinner
            android:id="@+id/AddUserSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/background_light"
            android:popupTheme="@style/Base.Theme.AppCompat"
            android:prompt="@string/select_user_spinner"
            android:spinnerMode="dialog" />

        <ImageButton
            android:id="@+id/AddSelectedUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_fragment_button"
            app:srcCompat="@drawable/ic_round_add_24px" />

    </LinearLayout>

    <ListView
        android:id="@+id/SelectedUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
