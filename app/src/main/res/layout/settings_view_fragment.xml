<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/songshare_top_search"
            android:fontFamily="@font/catamaran_medium"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:text="Settings"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/InstructionsLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/songshare_list_item"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/RecieveNotifSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:padding="17dp"
            android:text="@string/settings_notifications_show"
            android:textColor="@android:color/background_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/InstructionsLayout22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/InstructionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/songshare_list_item"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/IncludeOwnShares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:padding="17dp"
            android:text="@string/settings_swipe_instruct"
            android:textColor="@android:color/background_dark" />
    </LinearLayout>

    <TextView
        android:id="@+id/ProfileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/songshare_top_search"
        android:padding="15dp"
        android:text="Profile"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/EditProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/songshare_list_item"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/EditProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="Edit"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/imageView132"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:src="@drawable/ic_baseline_create_24px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LogoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/songshare_list_item"
        android:orientation="horizontal"
        android:padding="15dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/LogoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="Logout"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/LogoutIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:src="@drawable/ic_round_exit_to_app_24px" />

    </LinearLayout>

    <Button
        android:id="@+id/LogoutButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_button"
        android:text="Logout"
        android:textColor="@android:color/background_light"
        android:visibility="gone" />
</LinearLayout>