<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorAccent" />
                    <size
                        android:width="24dp"
                        android:height="24dp" />
                    <solid android:color="@color/colorAccent">

                    </solid>
                </shape>
            </item>
            <item
                android:width="7dp"
                android:height="2dp"
                android:top="14dp"
                android:left="5dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="11dp"
                android:height="2dp"
                android:top="12dp"
                android:left="8dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#fff"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>